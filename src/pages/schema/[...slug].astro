---
export const prerender = true;
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

export async function getStaticPaths() {
  const allRoutes = ["1", "2", "3"].map((post) => ({
    params: {
      slug: post,
    },
    props: post,
  }));

  return allRoutes;
}
